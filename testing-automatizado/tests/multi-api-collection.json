  "item": [
    {
      "name": "Check API Inventario Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{inventario_baseUrl}}{{inventario_healthCheck}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
